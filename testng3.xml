<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="UI Responsiveness Suite" parallel="tests" thread-count="3">
    <test name="Desktop Tests">
        <parameter name="deviceType" value="desktop"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory2"/>
        </classes>
    </test>
    <test name="Tablet Tests">
        <parameter name="deviceType" value="tablet"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory2"/>
        </classes>
    </test>
    <test name="Mobile Tests">
        <parameter name="deviceType" value="mobile"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory2"/>
        </classes>
    </test>
</suite>