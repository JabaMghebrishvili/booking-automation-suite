<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ResponsiveSuite" parallel="tests" thread-count="3">
    <test name="DesktopTest">
        <parameter name="browserType" value="chromium"/>
        <parameter name="deviceType" value="desktop"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory"/>
        </classes>
    </test>
    <test name="TabletTest">
        <parameter name="browserType" value="webkit"/>
        <parameter name="deviceType" value="tablet"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory"/>
        </classes>
    </test>
    <test name="MobileTest">
        <parameter name="browserType" value="chromium"/>
        <parameter name="deviceType" value="mobile"/>
        <classes>
            <class name="com.booking.runners.BrowserFactory"/>
        </classes>
    </test>
</suite>